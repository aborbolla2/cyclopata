<%= form_with(model: package, local: true) do |form| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
        <% package.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name,"Nombre" %>
    <%= form.text_field :name, autofocus: true, autocomplete: 'package', class: 'form-control',:placeholder=>"Nombre" %>
  </div>
  <div class="form-group col-md-6">
    <%= form.label :package_type_id, "Tipo" , :class=>"control-label bold"  %>
    <%= form.select :package_type_id, PackageType.all.map { |pt| [pt.name, pt.id] }, {}, {:class => "form-control input-field"} %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :clases,'Numero de Clases', :class=>"control-label" %><br>
    <%= form.number_field :clases, :class => "form-control input-lg", :placeholder => "Numero de Clases" %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', :class => 'btn btn-primary right' %>
  </div>
<% end %>

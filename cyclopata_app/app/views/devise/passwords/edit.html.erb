
<html lang="en">

<head>
  <%stylesheet_pack_tag 'login' %>
</head>

<body class="l-body">
<div class="zsidenav">
  <div class="zlogin-main-text">
    <h2>REESTABLECE TU CONTRASENA</h2>

  </div>
</div>

<div class="zmain">
  <div class="col-md-6 col-sm-12">
    <div class="zlogin-form2">
      <br><br><br><br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= bootstrap_devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, t('.new_password') %>
          <%= f.password_field :password, autofocus: true, class: 'form-control'  %>

          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, t('.confirm_new_password') %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'  %>
        </div>

        <div class="form-group">
          <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
</body>




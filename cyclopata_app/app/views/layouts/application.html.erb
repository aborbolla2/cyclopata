<!DOCTYPE html>
<html lang="en" id="mais">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "CyclopataApp" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
  <div id="message">
    <% if notice %>
      <div  id="inner-message-success" class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div  id="inner-message-danger" class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    <% end %>
  </div>



<% if !current_user.nil? %>
  <div>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="hamburger">
        <div class="cta">
          <div class="toggle-btn type14"></div>
        </div>
      </div>
    <!-- Brand/logo -->
    <a class="navbar-brand" href="#">
      CYCLOPATA
    </a>

    <!-- Links -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
          <%= current_user.username.upcase()%>
      </li>
      <li class="nav-item logouts">
        <%= link_to destroy_user_session_path, class:"nohov",method: :delete do %>
          <span class=""> <i class="material-icons">logout</i></span>

        <% end %>
        </a>
      </li>
      <li class="nav-item">

      </li>
    </ul>
  </nav>
    <section class="">
      <div class="sidebar-menu small-side-bar flowHide">
        <nav class="">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href=<%=admin_path%>>
                <span class="sidebar-icon"> <i class="material-icons">dashboard</i></span>
                <span class="fadeInRight animated nav-link-name name-hide tax-show">Dashboard</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <span class="sidebar-icon"> <i class="material-icons">book</i></span>
                <span class="fadeInRight animated nav-link-name name-hide tax-show">Reservaciones</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="">
                <span class="sidebar-icon"> <i class="material-icons">schedule</i></span>
                <span class="fadeInRight animated nav-link-name name-hide tax-show">Horario</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%=clients_path %>">
                <span class="sidebar-icon"> <i class="material-icons">person</i></span>
                <span class="fadeInRight animated nav-link-name name-hide tax-show">Usuarios</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%=settings_path %>">
                <span class="sidebar-icon"> <i class="material-icons">settings</i></span>
                <span class="fadeInRight animated nav-link-name name-hide tax-show">Configuracion</span>
              </a>
            </li>



          </ul>
        </nav>
      </div>


    </section>
  </div>

<% end  %>
<%= render 'sweetify/alert' %>
  <%=yield %>
  </body>
</html>
